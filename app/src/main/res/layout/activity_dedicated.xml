<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/activity_dedicated_super_constraint_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DedicatedActivity"
    android:background="#8C55CF5A"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/activity_dedicated_upper_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activity_dedicated_lower_relative_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        app:layout_constraintVertical_weight="0.3">

        <RelativeLayout
            android:id="@+id/activity_dedicated_header_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_dedicated_back_image_view"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:alpha="0.54" />

            <TextView
                android:id="@+id/activity_dedicated_header_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bulbasaur (#001)"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:alpha="0.54"/>

            <ImageView
                android:id="@+id/activity_dedicated_favorite_image_view"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_star_border"
                android:alpha="0.54"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/activity_dedicated_pokeball_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_pokeball_outlined"
            android:alpha="0.1" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_dedicated_lower_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/ic_ellipse_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_dedicated_upper_relative_layout"
        app:layout_constraintVertical_weight="0.55">

        <LinearLayout
            android:id="@+id/activity_dedicated_content_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/activity_dedicated_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bulbasaur (#001)"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif" />

            <com.aman802.pokedb.customViews.LockableScrollView
                android:id="@+id/activity_dedicated_content_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="25dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Type(s)"
                            android:textSize="17sp"
                            android:textColor="@color/black"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <include
                                android:id="@+id/activity_dedicated_type1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintWidth_percent="0.4"
                                app:layout_constraintStart_toStartOf="parent"
                                layout="@layout/item_tag" />

                            <include
                                android:id="@+id/activity_dedicated_type2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:layout_constraintWidth_percent="0.4"
                                app:layout_constraintEnd_toEndOf="parent"
                                layout="@layout/item_tag" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="25dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Weaknesses"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/activity_dedicated_weakness_group_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/activity_dedicated_weakness_group_2">

                                <include
                                    android:id="@+id/activity_dedicated_weakness1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintWidth_percent="0.4"
                                    app:layout_constraintStart_toStartOf="parent"
                                    layout="@layout/item_tag" />

                                <include
                                    android:id="@+id/activity_dedicated_weakness2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:layout_constraintWidth_percent="0.4"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    layout="@layout/item_tag" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/activity_dedicated_weakness_group_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:layout_constraintTop_toBottomOf="@+id/activity_dedicated_weakness_group_1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/activity_dedicated_weakness_group_3"
                                app:layout_constraintEnd_toEndOf="parent">

                                <include
                                    android:id="@+id/activity_dedicated_weakness3"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintWidth_percent="0.4"
                                    app:layout_constraintStart_toStartOf="parent"
                                    layout="@layout/item_tag" />

                                <include
                                    android:id="@+id/activity_dedicated_weakness4"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:layout_constraintWidth_percent="0.4"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    layout="@layout/item_tag" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/activity_dedicated_weakness_group_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:layout_constraintTop_toBottomOf="@+id/activity_dedicated_weakness_group_2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <include
                                    android:id="@+id/activity_dedicated_weakness5"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintWidth_percent="0.4"
                                    app:layout_constraintStart_toStartOf="parent"
                                    layout="@layout/item_tag" />

                                <include
                                    android:id="@+id/activity_dedicated_weakness6"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:layout_constraintWidth_percent="0.4"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    layout="@layout/item_tag" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Description"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/activity_dedicated_description_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bulbasaur can be seen napping in bright sunlight. There is a seed on its back. By soaking up the sun's rays, the seed grows progressively larger."
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1"
                                android:background="@color/black"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Evolutions"
                                android:textSize="17sp"
                                android:textColor="@color/black"
                                android:fontFamily="sans-serif"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:includeFontPadding="false"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1"
                                android:background="@color/black"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/activity_dedicated_evolutions_relative_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="visible"
                                android:gravity="center">

                                <LinearLayout
                                    android:id="@+id/activity_dedicated_evolution_1_linear_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_alignParentStart="true">

                                    <ImageView
                                        android:id="@+id/activity_dedicated_evolution_1_image_view"
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:src="@drawable/bulbasaur"/>

                                    <TextView
                                        android:id="@+id/activity_dedicated_evolution_1_text_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Bulbasaur\n(#001)"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="16dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/activity_dedicated_evolution_2_arrow_image_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_arrow_right"
                                    android:layout_marginStart="10dp"
                                    android:layout_toEndOf="@+id/activity_dedicated_evolution_1_linear_layout"
                                    android:layout_centerVertical="true"
                                    android:layout_toStartOf="@+id/activity_dedicated_evolution_2_linear_layout" />

                                <LinearLayout
                                    android:id="@+id/activity_dedicated_evolution_2_linear_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_centerHorizontal="true">

                                    <ImageView
                                        android:id="@+id/activity_dedicated_evolution_2_image_view"
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:src="@drawable/bulbasaur"/>

                                    <TextView
                                        android:id="@+id/activity_dedicated_evolution_2_text_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Bulbasaur\n(#001)"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="16dp"/>

                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/activity_dedicated_evolution_3_arrow_image_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_arrow_right"
                                    android:layout_marginStart="10dp"
                                    android:layout_toEndOf="@+id/activity_dedicated_evolution_2_linear_layout"
                                    android:layout_centerVertical="true"
                                    android:layout_toStartOf="@+id/activity_dedicated_evolution_3_linear_layout"/>

                                <LinearLayout
                                    android:id="@+id/activity_dedicated_evolution_3_linear_layout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_alignParentEnd="true">

                                    <ImageView
                                        android:id="@+id/activity_dedicated_evolution_3_image_view"
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:src="@drawable/bulbasaur"/>

                                    <TextView
                                        android:id="@+id/activity_dedicated_evolution_3_text_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Bulbasaur\n(#001)"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="16dp"/>

                                </LinearLayout>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/activity_dedicated_no_evolutions_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No evolutions"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-medium"
                                android:textAlignment="center"
                                android:visibility="gone"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1"
                                android:background="@color/black"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Base Stats"
                                android:textSize="17sp"
                                android:textColor="@color/black"
                                android:fontFamily="sans-serif"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:includeFontPadding="false"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1"
                                android:background="@color/black"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="HP"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="16dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Defense"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="16dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Attack"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="16dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Speed"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="16dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"/>

                                <TextView
                                    android:id="@+id/activity_dedicated_hp_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="73"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="16dp"/>

                                <TextView
                                    android:id="@+id/activity_dedicated_defense_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="147"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="16dp"/>

                                <TextView
                                    android:id="@+id/activity_dedicated_attack_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="220"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="16dp"/>

                                <TextView
                                    android:id="@+id/activity_dedicated_speed_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="294"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="16dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="10dp">

                                <ProgressBar
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:progress="25"
                                    android:progressBackgroundTint="@color/bugType"
                                    android:progressTint="@color/colorPrimary"
                                    android:visibility="invisible"/>

                                <ProgressBar
                                    android:id="@+id/activity_dedicated_hp_progress_bar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:progress="25"
                                    android:layout_marginTop="16dp" />

                                <ProgressBar
                                    android:id="@+id/activity_dedicated_defense_progress_bar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:progress="50"
                                    android:layout_marginTop="16dp" />

                                <ProgressBar
                                    android:id="@+id/activity_dedicated_attack_progress_bar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:progress="75"
                                    android:layout_marginTop="16dp" />

                                <ProgressBar
                                    android:id="@+id/activity_dedicated_speed_progress_bar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:progress="100"
                                    android:layout_marginTop="16dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Min"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:id="@+id/activity_dedicated_hp_min_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="16dp"/>

                                <TextView
                                    android:id="@+id/activity_dedicated_defense_min_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="16dp"/>

                                <TextView
                                    android:id="@+id/activity_dedicated_attack_min_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="16dp"/>

                                <TextView
                                    android:id="@+id/activity_dedicated_speed_min_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="16dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Max"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:id="@+id/activity_dedicated_hp_max_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="250"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="16dp"/>

                                <TextView
